<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy name="iterateWithSOAPActionTestProxy" transports="http"
           startOnLoad="true" trace="disable">
        <target>
            <inSequence>
                <iterate id="iterator" expression="//m0:getQuote/m0:request"
                         preservePayload="true" attachPath="//m0:getQuote" xmlns:m0="http://services.samples">
                    <target to="http://localhost:9000/services/SimpleStockQuoteService" soapAction="m0:getQuote">
                        <sequence>
                            <send>
                            </send>
                        </sequence>
                    </target>
                </iterate>
            </inSequence>
            <outSequence>
                <sequence key="aggregateMessagesForIterateTests"/>
            </outSequence>
        </target>
    </proxy>
    <sequence name="aggregateMessagesForIterateTests">
        <aggregate id="iterator">
            <completeCondition>
                <messageCount min="-1" max="-1" />
            </completeCondition>
            <onComplete xmlns:ns="http://org.apache.synapse/xsd"
                        xmlns:ns3="http://org.apache.synapse/xsd" xmlns:m0="http://services.samples"
                        expression="//m0:getQuoteResponse">
                <send />
            </onComplete>
        </aggregate>
    </sequence>
</definitions>